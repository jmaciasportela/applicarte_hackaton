"#info_content_title": {
	top: "20dp",
	left: "15dp",
	right: "70dp",
	width: Ti.UI.FILL,
	height: Ti.UI.SIZE,
    font: {
        fontFamily:"Helvetica",
        fontSize: "18dp",
        fontStyle: "normal",
        fontWeight: "bold"
    },
	color: "#0095FF",		
